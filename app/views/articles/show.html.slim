= render 'partials/title', title: 'Article', subtitle: @article.title


p#notice = notice

.level
  .level-item
    .column
      p
        strong Title:
        =< @article.title
      p
        strong User:
        =< @article.user
  div
    = link_to edit_article_path(@article) do
      .button.outline
        i.material-icons mode_edit
p.mb-5x
  .row.center.mb-20x
    strong.t-center Submissions:
  table
    thead
      tr
        th Journal
        th.t-center Dates
        th Result
    - @article.submissions.includes(:events).sort{ |s, t| t.events.map(&:date).max <=> s.events.map(&:date).max}.each do |s, i|
      tr data-url=submission_url(s)
        td= s
        td
          = s.events.order(:date).first.date
          = ' - '
          = s.last_event.date
        td= s.last_event.event_subtype
/ .mb-40x
/ .row.center
/   = link_to 'Articles', articles_path
/   ' |
/   = link_to 'New Submission', new_submission_path(submission: { article_id: @article.id })
